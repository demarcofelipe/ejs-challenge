<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Title</label>
    <input type="text" class="form-control" id="exampleInputEmail1" name="postTitle">
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Post</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="postBody"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>


